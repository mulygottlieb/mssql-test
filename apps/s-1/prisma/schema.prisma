datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean  @default(false)
  title     String   @db.VarChar(255)
  authorId  Int?
  parent    Post?    @relation(name: "children", fields: [parentId], references: [id])
  parentId  Int?
  children  Post[]   @relation(name: "children")
}
